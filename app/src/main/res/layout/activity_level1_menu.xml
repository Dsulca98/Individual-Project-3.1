<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level1Menu"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/menu2">




    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="2">


        <Button
            android:layout_width="55dp"
            android:layout_height="57dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:background="@drawable/red_button"
            android:onClick="launchGame1"
            android:text="1"
            android:textColor="#B59B02"
            android:textSize="20sp" />

        <Button
            android:layout_width="55dp"
            android:layout_height="57dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@drawable/red_button"
            android:onClick="launchGame2"
            android:text="2"
            android:textColor="#B59B02"
            android:textSize="20sp" />

        <Button
            android:layout_width="55dp"
            android:layout_height="57dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:background="@drawable/red_button"
            android:onClick="launchGame3"
            android:text="3"
            android:textColor="#B59B02"

            android:textSize="20sp" />

        <Button
            android:layout_width="55dp"
            android:layout_height="57dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:background="@drawable/locked_level3"
            android:text=""
            android:textColor="#B59B02"
            android:textSize="20sp" />

        <Button
            android:layout_width="55dp"
            android:layout_height="57dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@drawable/locked_level3"
            android:text=""
            android:textColor="#B59B02"
            android:textSize="20sp" />

        <Button
            android:layout_width="55dp"
            android:layout_height="57dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:background="@drawable/locked_level3"
            android:text=""
            android:textColor="#B59B02"
            android:textSize="20sp" />

    </GridLayout>





</RelativeLayout>